<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="com.strizhonovapps.anylangapp">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>

    <application
            android:allowBackup="false"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name_content"
            android:theme="@style/AppTheme">

        <activity android:name="com.strizhonovapps.anylangapp.view.SelectLanguageDialog" />
        <activity android:name="com.strizhonovapps.anylangapp.view.MainActivity" />
        <activity
                android:name="com.strizhonovapps.anylangapp.view.ModifyWordActivity"
                android:theme="@style/WindowedDialog" />
        <activity
                android:name="com.strizhonovapps.anylangapp.view.AddWordActivity"
                android:theme="@style/WindowedDialog" />
        <activity
                android:name="com.strizhonovapps.anylangapp.view.WordListSettingsActivity"
                android:theme="@style/WindowedDialog" />
        <activity android:name="com.strizhonovapps.anylangapp.OnAppStartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>