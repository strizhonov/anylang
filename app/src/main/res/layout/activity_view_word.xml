<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/position_text_view"
        android:layout_width="28dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="2dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/position_text_view"
        android:maxLines="1"
        android:padding="3dp"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/translation_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_text_view"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/position_text_view"
        android:ellipsize="end"
        android:maxLines="2"
        android:padding="3dp" />

    <TextView
        android:id="@+id/level_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/translation_text_view"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/position_text_view"
        android:ellipsize="end"
        android:maxLines="2"
        android:padding="3dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/id_text_view"
        android:layout_width="15dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/position_text_view"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="6dp"
        android:padding="3dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/target_date_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/level_text_view"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/position_text_view"
        android:ellipsize="end"
        android:maxLines="2"
        android:padding="3dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/modification_date_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/target_date_text_view"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/position_text_view"
        android:ellipsize="end"
        android:maxLines="2"
        android:padding="3dp"
        android:visibility="gone" />

</RelativeLayout>