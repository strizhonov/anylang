<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColorSecondary">@color/colorAlternativeText</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
    </style>
    <style name="WindowedDialog" parent="android:style/Theme.DeviceDefault.Light.Dialog">
        <item name="android:textColorSecondary">@color/colorPrimaryText</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>
